<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.appcelerator.titanium2"
      android:versionCode="1"
      android:versionName="1"
>
	<uses-sdk android:minSdkVersion="3" />
	<application
    	android:icon="@drawable/appicon"
      	android:label="KitchenSink"
      	android:name="KitchensinkApplication"
      	android:debuggable="false"
	>
    	<activity
        	android:name=".KitchensinkActivity"
            android:label="KitchenSink"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
        	android:name="org.appcelerator.titanium.TitaniumActivity"
        	android:configChanges="keyboardHidden|orientation"
      	/>
    	<activity
    		android:name="org.appcelerator.titanium.TitaniumVideoActivity"
    		android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
    	/>
    	<activity
    		android:name="org.appcelerator.titanium.module.map.TitaniumMapActivity"
    		android:configChanges="keyboardHidden|orientation"
    		android:launchMode="singleTask"
    	/>
        <activity 
			android:name="org.appcelerator.titanium.module.facebook.FBActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
        />

    	<uses-library android:name="com.google.android.maps" />
<!--
		<provider
			android:authorities="com.appcelerator.titanium2.titanium"
			android:name="org.appcelerator.titanium.TitaniumContentProvider"
		/>
-->
		<service
			android:name="org.appcelerator.titanium.TitaniumAnalyticsService"
			android:exported="false"
		/>
	</application>
	<!-- required when using net -->
  	<uses-permission android:name="android.permission.INTERNET"/>
  	<!-- required to check network connectivity -->
  	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  	<!-- required for geolocation -->
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<!-- required for getting phone information -->
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<!-- required for using vibrator -->
	<uses-permission android:name="android.permission.VIBRATE"/>
	<!-- required for using the camera -->
	<uses-permission android:name="android.permission.CAMERA" />
	<!-- required for reading contact data -->
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
</manifest>

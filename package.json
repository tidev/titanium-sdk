{
  "name": "titanium-mobile",
  "description": "Appcelerator Titanium Mobile",
  "version": "8.1.0",
  "moduleApiVersion": {
    "iphone": "2",
    "android": "4",
    "windows": "6"
  },
  "keywords": [
    "appcelerator",
    "titanium",
    "mobile",
    "android",
    "iphone",
    "ipad",
    "ios"
  ],
  "author": "Appcelerator, Inc. <npmjs@appcelerator.com>",
  "scripts": {
    "test": "npm run ios-sanity-check && grunt",
    "android": "./build/scons cleanbuild android",
    "android-test": "./build/scons clean android && ./build/scons build android && ./build/scons package -s android && ./build/scons install && ti sdk select $npm_package_version && ./build/scons test -s android",
    "ios": "./build/scons cleanbuild ios",
    "ios-sanity-check": "./build/scons check-ios-toplevel",
    "ios-test": "./build/scons clean ios && ./build/scons build ios && ./build/scons package -s ios && ./build/scons install && ti sdk select $npm_package_version && ./build/scons test -s ios",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "iphone/**/*.{m,h}": [
        "npx clang-format -style=file -i",
        "git add"
      ],
      "iphone/TitaniumKit/TitaniumKit/Sources/API/TopTiModule.m": [
        "npm run ios-sanity-check --"
      ],
      "*.java": [
        "npx clang-format -style=file -i",
        "git add"
      ],
      "*.js": "eslint"
    },
    "ignore": [
      "**/locales/**/*.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "adm-zip": "^0.4.11",
    "appc-aar-tools": "^1.1.5",
    "appc-tasks": "^1.0.1",
    "archiver": "^3.0.0",
    "async": "^2.6.1",
    "buffer-equal": "1.0.0",
    "clean-css": "4.2.1",
    "colors": "^1.3.3",
    "css-parse": "2.0.0",
    "ejs": "^2.6.1",
    "fields": "0.1.24",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.2",
    "humanize": "0.0.9",
    "ioslib": "^1.7.5",
    "liveview": "^1.4.4",
    "lodash.defaultsdeep": "^4.6.0",
    "markdown": "0.5.0",
    "moment": "^2.22.2",
    "node-appc": "^0.2.47",
    "node-titanium-sdk": "^1.0.7",
    "node-uuid": "1.4.8",
    "pngjs": "^3.3.3",
    "request": "^2.87.0",
    "semver": "^5.5.0",
    "sprintf": "0.1.5",
    "temp": "0.9.0",
    "windowslib": "^0.6.7",
    "wrench": "1.5.9",
    "xcode": "^2.0.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.1",
    "@commitlint/config-conventional": "^7.3.1",
    "@seadub/danger-plugin-dependencies": "0.1.0",
    "@seadub/danger-plugin-eslint": "^0.3.0",
    "@seadub/danger-plugin-junit": "0.0.2",
    "clang-format": "^1.2.3",
    "commander": "^2.15.1",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "danger": "^7.0.1",
    "eslint-config-axway": "^4.2.1",
    "eslint-plugin-mocha": "^5.2.1",
    "grunt": "^1.0.3",
    "grunt-appc-js": "^2.1.0",
    "grunt-clang-format": "^1.1.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-mocha-test": "^0.13.3",
    "husky": "^1.3.1",
    "js-yaml": "^3.12.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "pagedown": "~1.1.0",
    "ssri": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/appcelerator/titanium_mobile.git"
  },
  "vendorDependencies": {
    "visual studio": ">=10 <=12",
    "windows phone sdk": "8.x",
    "msbuild": ">=4.0",
    "node": "8.x || 10.x"
  },
  "engines": {
    "node": ">=8"
  },
  "license": "Apache-2.0"
}
